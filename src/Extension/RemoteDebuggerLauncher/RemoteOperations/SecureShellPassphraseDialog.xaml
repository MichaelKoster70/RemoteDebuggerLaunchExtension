<Window x:Class="RemoteDebuggerLauncher.RemoteOperations.SecureShellPassphraseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SSH Private Key Passphrase"
        Height="200"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="KeyFileLabel" 
               Grid.Row="0"
               Content="Enter passphrase for private key:" 
               FontWeight="Bold"/>
        
        <Label Grid.Row="2" 
               Content="Passphrase:"
               Target="{Binding ElementName=PassphraseBox}"/>
        
        <PasswordBox x:Name="PassphraseBox" 
                     Grid.Row="4"
                     Height="25"
                     PasswordChanged="PassphraseBox_PasswordChanged"/>
        
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="75" 
                    Height="25" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    IsEnabled="False"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="75" 
                    Height="25"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>